<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".TrackEvent">

    <TextView
        android:id="@+id/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Track Event"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/eventname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Heading"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-9dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#30000000"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:textColorHint="@color/black"
        android:hint="Enter Event Name"
        android:padding="20dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/attributename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventname"
        android:layout_margin="20dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:background="#30000000"
        android:drawableLeft="@drawable/baseline_policy_24"
        android:drawablePadding="20dp"
        android:textColorHint="@color/black"
        android:hint="Enter Attribtue name"
        android:inputType="text"
        android:padding="20dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/attributeval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/attributename"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:background="#30000000"
        android:drawableLeft="@drawable/baseline_policy_24"
        android:drawablePadding="20dp"
        android:hint="Enter Attribute value"
        android:inputType="text"
        android:padding="20dp"
        android:textStyle="italic" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/datarack"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attributeval"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="80dp"
        android:padding="20dp"
        android:text="Track Data" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/datarack"
        android:text="Go Back"
        android:padding="20dp"
        />



</RelativeLayout>